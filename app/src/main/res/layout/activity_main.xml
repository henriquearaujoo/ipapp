<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.speedy.ipapp.MainActivity"
    android:gravity="center_horizontal">

    <android.support.v4.view.ViewPager android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#33b5e5"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/btBuscarCompras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_action_pageview"
            android:text="Buscar"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/btDescartar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:drawableLeft="@drawable/ic_action_action_delete"
            android:text="Descartar"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/btSalvarCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:drawableLeft="@drawable/ic_action_content_save"
            android:text="Salvar"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/btFinalizarCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:drawableLeft="@drawable/ic_action_toggle_check_box"
            android:text="Finalizar"
            android:textColor="#ffffffff" />

    </LinearLayout>


</RelativeLayout>
